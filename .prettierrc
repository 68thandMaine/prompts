{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown",
        "printWidth": 80,
        "proseWrap": "preserve",
        "embeddedLanguageFormatting": "auto"
      }
    },
    {
      "files": ["*.mdc"],
      "options": {
        "parser": "markdown",
        "printWidth": 80,
        "proseWrap": "preserve",
        "embeddedLanguageFormatting": "auto"
      }
    }
  ]
}
